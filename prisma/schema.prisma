generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./carly.db"
}

model Car {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  model           String
  brand           String
  price           Int
  discountedPrice Int
  manufactureYear Int
  topSpeed        Int
  type            String
  transmission    String
  condition       String
  fuel            String
  description     String
  image           String
}

model Contact {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedat DateTime @updatedAt
  firstName String
  lastName  String
  phone     String?
  email     String
  message   String
}
